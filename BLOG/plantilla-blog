  <!-- JS: filtro por b√∫squeda + categor√≠as (no toca tu script.js; lo complementa) -->
  <script src="script.js"></script>
  <script>
    (function(){
      const searchInput = document.getElementById('searchInput');
      const chips = Array.from(document.querySelectorAll('.chip'));
      const posts = Array.from(document.querySelectorAll('#postGrid .post-card'));

      let activeFilter = 'all';

      function normalize(s){ return (s || '').toLowerCase().trim(); }

      function apply(){
        const q = normalize(searchInput.value);
        posts.forEach(card => {
          const cat = normalize(card.getAttribute('data-category'));
          const title = normalize(card.getAttribute('data-title'));
          const tags = normalize(card.getAttribute('data-tags'));

          const filterOk = (activeFilter === 'all') || (cat === activeFilter);
          const searchOk = (!q) || title.includes(q) || tags.includes(q);

          card.style.display = (filterOk && searchOk) ? '' : 'none';
        });
      }

      chips.forEach(btn => {
        btn.addEventListener('click', () => {
          chips.forEach(b => b.dataset.active = "false");
          btn.dataset.active = "true";
          activeFilter = btn.getAttribute('data-filter');
          apply();
        });
      });

      searchInput.addEventListener('input', apply);

      // Quick jumps en sidebar
      document.querySelectorAll('[data-jump]').forEach(a => {
        a.addEventListener('click', (e) => {
          e.preventDefault();
          const target = a.getAttribute('data-jump');
          chips.forEach(b => b.dataset.active = "false");
          const chip = chips.find(b => b.getAttribute('data-filter') === target) || chips[0];
          chip.dataset.active = "true";
          activeFilter = chip.getAttribute('data-filter');
          apply();
          window.scrollTo({ top: document.getElementById('postGrid').offsetTop - 90, behavior: 'smooth' });
        });
      });

      apply();
    })();
  </script>
